.signup__container
  .signup__container__top
    %h1.signup__container__top-title
      %a.signup__container__top-title-link
        %img.signup__container__top-title-link-logo{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464"}
    %nav.signup__container__top__progress
      %ol.signup__container__top__progress-lists
        %li.signup__container__top__progress-lists-nextlist.onprogress
          会員情報
          .signup__container__top__progress-lists-list-status
        %li.signup__container__top__progress-lists-nextlist.onprogress.bprogress
          電話番号認証
          .signup__container__top__progress-lists-list-status
        %li.signup__container__top__progress-lists-nextlist.onprogress.bprogress
          お届け先住所入力
          .signup__container__top__progress-lists-list-status
        %li.signup__container__top__progress-lists-list.bprogress
          支払い方法
          .signup__container__top__progress-lists-list-status
        %li.signup__container__top__progress-lists-nextlist.bprogress
          完了
          .signup__container__top__progress-lists-nextlist-laststatus
  .signup__container__bottom
    %section.signup__container__bottom__main
      %h2.signup__container__bottom__main-title.fieldborder 決済情報入力
      .field
        .field-groups
      %section.user__mypage__creditbox-card
        .user__mypage__creditbox__card__form
          .user__mypage__creditbox__card__form__card
            %label.card-number-text
              カード番号
              %span.card-number-hi
                必須
            = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
              %label
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number",class:"card__number__field"
              %br
                %ul.card-brand-image-box
                  %li
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2296184308",class:"card-brand-image",width: 49,height: 20
                  %li.card-brand-image 
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2296184308",class:"card-brand-image",width:34,height:20
                  %li.card-brand-image
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2296184308",class:"card-brand-image",width:30,height:20
                  %li
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2296184308",class:"card-brand-image",width:32,height:20
                  %li.card-brand-image 
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2296184308",class:"card-brand-image",width:21,height:20
                  %li.card-brand-image
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2296184308",class:"card-brand-image",width:32,height:20
                  %li.card-brand-image
                    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2296184308",class:"card-brand-image",width:32,height:20

              %label.card-number-text
                有効期限
                %span.card-number-hi
                  必須
              .select__number-card
                %select#exp_month{name: "exp_month", type: "text",class:"select--hi--card"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span.select-card----text 月
                %select#exp_year{name: "exp_year", type: "text",class:"select--hi--card"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %span.select-card----text 年
                %br

                .csv-text-field--box
                  %label.card-number-text
                    セキュリティーカード
                    %span.card-number-hi
                      必須
                  .csv-text-field
                  = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc",class:"card__number__field"
                  .csv-text-field-text
                    %span.csv-text-field-text-gi
                      ?
                    .csv-text-field-text-ba
                      カード裏面の番号とは？
                  #card_token
                  = submit_tag "登録を完了する", id: "token_submit",class:"add_card_button"
        %p </br>
  .login-footer
    %nav
      %ul.footer-clearfix
        %li
          = link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
        %li.footer-margin-left
          = link_to "メルカリの利用規約", "https://www.mercari.com/jp/tos/"
        %li.footer-margin-left
          = link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
    = link_to root_path do
      = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464", class: "login-footer__logo"
    %p ©2019 Mercari